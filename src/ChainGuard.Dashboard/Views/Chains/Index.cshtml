@model ChainGuard.Dashboard.Models.ChainListViewModel
@{
    ViewData["Title"] = "Audit Chains";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="bi bi-link-45deg"></i> Audit Chains
        </h1>
    </div>

    @if (!Model.Chains.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No audit chains found. Create one to get started.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var chain in Model.Chains)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                @if (chain.IsActive)
                                {
                                    <span class="badge bg-success me-2">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary me-2">Inactive</span>
                                }
                                @chain.ChainName
                            </h5>
                            <p class="card-text text-muted">@chain.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-layers"></i> @chain.BlockCount blocks
                                </small>
                                <div>
                                    <a asp-action="Details" asp-route-id="@chain.ChainId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.CurrentPage > 1 || Model.Chains.Count == Model.PageSize)
        {
            <nav aria-label="Chain pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">
                                Previous
                            </a>
                        </li>
                    }
                    @if (Model.Chains.Count == Model.PageSize)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">
                                Next
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>
